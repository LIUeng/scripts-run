{
  "name": "scripts-run",
  "displayName": "scripts-run",
  "description": "Run package.json scripts for vscode extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "types": "./index.d.ts",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "run-scripts",
          "title": "Run Scripts",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "run-scripts": [
        {
          "id": "run",
          "name": "Run"
        },
        {
          "id": "nvm",
          "name": "Nvm"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "run",
        "contents": "Before run scripts, please check your node version right."
      }
    ],
    "commands": [
      {
        "command": "run.refresh",
        "title": "Refresh Scripts",
        "icon": "$(refresh)"
      },
      {
        "command": "run.add",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "run.play",
        "title": "Play",
        "icon": "$(debug-start)"
      },
      {
        "command": "run.delete",
        "title": "Delete",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "run.refresh",
          "when": "view == run",
          "group": "navigation"
        },
        {
          "command": "run.add",
          "when": "view == run",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "run.delete",
          "when": "view == run && viewItem == scriptItem",
          "group": "inline"
        },
        {
          "command": "run.play",
          "when": "view == run && viewItem == scriptItem",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "ScriptsRun",
      "properties": {
        "scriptsRun.showTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Run show terminal window(background)"
        },
        "scriptsRun.storageScripts": {
          "type": "boolean",
          "default": true,
          "description": "Storage workspace scripts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "esbuild": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
